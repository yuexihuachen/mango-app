{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["es6", "dom"],
    "forceConsistentCasingInFileNames": true, 
    "esModuleInterop": true,
    "strict": true, 
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist"                       
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
